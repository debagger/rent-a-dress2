{
 "openapi": "3.0.0",
 "info": {
  "title": "rent-a-dress",
  "description": "This is API for rent-a-dress.ru service",
  "version": "1.0.1"
 },
 "servers": [
  {
   "url": "https://rent-a-dress.ru"
  },
  {
   "url": "https://localhost"
  }
 ],
 "paths": {
  "/api/catalog": {
   "get": {
    "operationId": "getCatalog",
    "responses": {
     "200": {
      "description": "Return all items from catalog",
      "content": {
       "application/json": {
        "schema": {
         "type": "array",
         "items": {
          "$ref": "#/components/schemas/catalogItem"
         }
        }
       }
      }
     }
    }
   },
   "post": {
    "operationId": "newCatalogItem",
    "requestBody": {
     "content": {
      "application/json": {
       "schema": {
        "$ref": "#/components/schemas/catalogItem"
       }
      }
     }
    },
    "responses": {
     "200": {
      "description": "Return savead catalogItem",
      "content": {
       "application/json": {
        "schema": {
         "$ref": "#/components/schemas/catalogItem"
        }
       }
      }
     }
    }
   }
  },
  "/api/catalog/{id}": {
   "delete": {
    "operationId": "deleteCatalogItem",
    "responses": {
     "204": {
      "description": "CatalogItem deleted successfully",
      "content": {
       "text/plain": {
        "schema": {
         "type": "string",
         "default": "CatalogItem deleted successfully"
        }
       }
      }
     },
     "404": {
      "description": "id not found",
      "content": {
       "text/plain": {
        "schema": {
         "type": "string",
         "default": "id not found"
        }
       }
      }
     }
    }
   },
   "parameters": [
    {
     "name": "id",
     "in": "path",
     "required": true,
     "schema": {
      "type": "integer"
     }
    }
   ]
  }
 },
 "components": {
  "schemas": {
   "Image": {
    "properties": {
     "id": {
      "type": "integer"
     },
     "imageName": {
      "type": "string"
     }
    },
    "type": "object",
    "required": [
     "id",
     "imageName"
    ]
   },
   "User": {
    "properties": {
     "id": {
      "type": "integer"
     },
     "username": {
      "type": "string"
     },
     "email": {
      "format": "email",
      "type": "string"
     },
     "role": {
      "type": "string"
     },
     "password": {
      "type": "string"
     }
    },
    "type": "object",
    "required": [
     "id",
     "username",
     "email",
     "role",
     "password"
    ]
   },
   "Token": {
    "properties": {
     "id": {
      "type": "integer"
     },
     "token": {
      "type": "string"
     }
    },
    "type": "object",
    "required": [
     "id",
     "token"
    ]
   },
   "catalogItemOption": {
    "properties": {
     "id": {
      "type": "integer"
     },
     "size": {
      "type": "string"
     },
     "color": {
      "type": "string"
     }
    },
    "type": "object",
    "required": [
     "id",
     "size",
     "color"
    ]
   },
   "catalogItem": {
    "properties": {
     "id": {
      "type": "integer"
     },
     "caption": {
      "type": "string"
     },
     "desc": {
      "type": "string"
     },
     "img": {
      "type": "string"
     },
     "options": {}
    },
    "type": "object",
    "required": [
     "id",
     "caption",
     "desc",
     "img"
    ]
   }
  }
 }
}