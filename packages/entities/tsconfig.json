{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es5", "es6", "dom"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": ".",
    "declaration": true,
    "declarationDir": "./build/declarations",
    "declarationMap": true,
    "types": [
      "@types/node",
      "@nuxt/types"
    ],
    "incremental": true
  },
  "exclude": ["./node_modules", "build"]
}
