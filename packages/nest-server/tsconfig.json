{
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "allowJs": true,
    "skipDefaultLibCheck": true
  },
  "include": ["src/**/*"]
}
